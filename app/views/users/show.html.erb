<% provide(:title, @user.name) %>
<div class="row">
<aside class="col-md-4">
<section class="user_info">
<h1>
	<%if @user.image %>
	<%= image_tag(@user.image.url(:original, timestamp:false),size: "80x80")%>
	<% end %>
<%= get_avatar (@user) %>
<%= @user.name %>

</h1>
</section>
</aside>
<div class="col-md-8">
	<% if @user.blogs.any? %>
	<h3>Blogs (<%= @user.blogs.count %>)</h3>
		<ol class="blogs" id="profile_blogs">
		<%= render @blogs %>
		</ol>
	
	<% end %>
</div>
</div>
